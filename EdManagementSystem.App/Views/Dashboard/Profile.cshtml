@{
    ViewData["Title"] = "Домашняя страница";
    Layout = "_DashboardLayout";
}

<h1 class="title">Профиль</h1>
<div class="personal-account-info">
    <div class="personal-account-info__block">
        <div class="personal-account-info__avatar">
            <img id="avatar_icon" src="~/icons/common-icons/avatar-icon.svg" alt="avatar">
        </div>
        <h3 style="text-align: center;" id="personal-account-info__name"></h3>
        <span style="text-align: center;" id="personal-account-info__post"></span>
        <span style="text-align: center;" id="personal-account-info__rate"></span>
        <input type="hidden" id="userId" value="@ViewBag.UserId" />
        <hr width="100%" size="1" color="#c3c3c3" />
        <div class="personal-account-info__item">
            <img src="~/icons/common-icons/place-icon.svg" alt="place">
            <span id="personal-account-info__place"></span>
        </div>
        <div class="personal-account-info__item">
            <img src="~/icons/common-icons/phone-icon.svg" alt="phone-number">
            <span id="personal-account-info__phone-number"></span>
        </div>
        <div class="personal-account-info__item">
            <img src="../icons/common-icons/email-icon.svg" alt="email">
            <span id="personal-account-info__email">@ViewBag.UserId</span>
        </div>
        <hr width="100%" size="1" color="#c3c3c3"/>
        <ul class="social-media-list">
            <li class="social-media-list__item">
                <a href="https://vk.ru" target="_blank">
                    <img src="~/icons/social-media-icons/vk-icon.svg" alt="vk-icon">
                </a>
            </li>
            <li class="social-media-list__item">
                <a href="https://whatsapp.ru" target="_blank">
                    <img src="~/icons/social-media-icons/whatsApp-icon.svg" alt="whatsApp-icon">
                </a>
            </li>
            <li class="social-media-list__item">
                <a href="https://web.telegram.org" target="_blank">
                    <img src="~/icons/social-media-icons/telegram-icon.svg" alt="telegram-icon">
                </a>
            </li>
        </ul>
    </div>

    <div class="personal-account-info__block">
        <h3 style="text-align: center;">Статистика</h3>

        <div class="state-block">
            <div class="state-block__item">
                <span>Опыт работы (лет): <span id="experience"></span></span>
            </div>
            <div class="state-block__item">
                <span>На данной платформе с: <span id="regDate"></span></span>
            </div>
            <div class="state-block__item">
                <span>Количество студентов: <span id="studentsCount"></span></span>
            </div>
            <div class="state-block__item">
                <span>Количество групп: <span id="squadsCount"></span></span>
            </div>
        </div>

        <div class="state-block">
            <span>Прикрепленные курсы:</span>
            <ul class="courses-list" id="coursesList">
            </ul>
        </div>

        <div class="state-block">
            <span>Прикрепленные группы:</span>
            <ul class="courses-list" id="squadsList">
            </ul>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/profile.js"></script>