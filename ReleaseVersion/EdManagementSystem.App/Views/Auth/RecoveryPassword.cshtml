@{
    ViewData["Title"] = "Восстановление пароля";
}

<div class="wrapper wrapper_recovery">
    <div class="reset-form-container">
        <form id="changePasswordForm" method="post" class="reset-form reset-form_send-code-content" autocomplete="off" novalidate>
            <img src="~/icons/common-icons/logo.svg" alt="logotypeImg" class="logotype reset-form__img">
            <h1 class="reset-form__title title" style="text-align:center">Восстановление пароля</h1>
            <h3 class="timer" style="display:none">Времени осталось: <span id="timerSpan">5:00</span> секунд</h3>
            <input id="keyInput" type="text" class="custom-input reset-form__input_client-key" placeholder="Ключ (из письма)" autocomplete="none" />
            <input id="passwordInput" type="text" class="custom-input reset-form__input_new-password" placeholder="Новый пароль" autocomplete="none" />
            <button type="submit" class="custom-btn reset-form__send-code-btn">Изменить пароль</button>
            <button type="button" class="custom-btn custom-btn_secondary reset-form__get-back-btn">Вернуться назад</button>
        </form>
    </div>

    <footer class="footer footer_sign-page">
        <a href="#!" class="custom-link footer_sign-page__supportLink">Техническая поддержка</a>
        <h3 class="footer_sign-page__copyright">© 2024 Университет энергии и позитива</h3>
    </footer>
</div>

<script defer src="~/js/recoveryPassword.js"></script>